d-i    partman-auto/disk               string /dev/discs/disc0/disc
d-i    partman-auto/choose_recipe      select root-lvm
d-i    partman/confirm_write_new_label boolean true
d-i    partman/choose_partition        select Finish partitioning and write changes to disk
d-i    partman/confirm                 boolean true


d-i partman-auto/expert_recipe         string root-lvm :: 300 4000 7000 ext3 $primary{ } $bootable{ } method{ format } format{ } use_filesystem{ } filesystem{ ext3 } mountpoint{ / } . 64 512 300% linux-swap method{ swap } format{ } . 100 10000 1000000000 ext2 method{ format } format{ } use_filesystem{ } filesystem{ ext2 } mountpoint{ /reserved-for-LVM } .